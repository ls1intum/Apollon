    }

    .convert-button:hover {
      background-color: #45a049;
    }

    .delete-button {
      padding: 8px 16px;
      background-color: #f44336;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin: 10px 0;
    }

    .delete-button:hover {
      background-color: #d32f2f;
    }
